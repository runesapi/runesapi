{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["ES2020"],
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/", "dist/"]
}
